CROSS_HOST="x86_64-w64-mingw32"
ORIG_PN="glew"
inherit cross

DESCRIPTION="OpenGL Extension Wrangler library for mingw64"
HOMEPAGE="http://glew.sourceforge.net/"
SRC_URI="mirror://sourceforge/glew/${ORIG_PN}-${PV}.tgz"
PATCH_URI="1.7.0-no-strip.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake all SYSTEM=mingw CC=${CC} LD=${CC} GLEW_DEST=${CROSS_PREFIX}
}

src_install() {
	cd ${B}
	cygmake install.all SYSTEM=mingw GLEW_DEST=${D}${CROSS_PREFIX}
}
